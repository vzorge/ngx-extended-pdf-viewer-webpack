{
    "compileOnSave": false,
    "compilerOptions": {
        "allowJs": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "baseUrl": "./",
        "outDir": "./dist/out-tsc",
        "sourceMap": true,
        "declaration": false,
        "module": "ES2020",
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "noImplicitAny": true,
        "suppressImplicitAnyIndexErrors": true,
        "strictFunctionTypes": false,
        "target": "ES2020",
        "typeRoots": [
            "node_modules/@types",
            "./src/typings"
        ]
    },
    "exclude": [
        "node_modules/*",
        "app/**/*.js"
    ]
}
